<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="payment_punchout_button" inherit_id="website_sale.payment">
        <xpath expr="//div[@id='payment_method']" position="after">
            <div class="mt-3" id="payment_method_punchout">
                <form
                    target="_self"
                    action="/shop/payment/validate_punchout"
                    method="post"
                    class="float-right"
                >
                    <input
                        type="hidden"
                        name="csrf_token"
                        t-att-value="request.csrf_token()"
                    />
                    <input type="hidden" name="cXML-urlencoded" t-att-value="''" />
                    <a role="button" class="btn btn-primary a-submit" href="#">
                        <span>Pay with Punchout <span
                                class="fa fa-chevron-right"
                            /></span>
                    </a>
                </form>
            </div>
        </xpath>
    </template>
</odoo>
