<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_ariba" model="ir.ui.view">
        <field
            name="inherit_id"
            ref="purchase.res_config_settings_view_form_purchase"
        />
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']" position="inside">
                <h2>Ariba configuration</h2>
                <div
                    class="row mt16 o_settings_container"
                    name="purchase_setting_container_punchout"
                >
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label
                                        for="ariba_unique_name"
                                        class="col-lg-4 o_light_label"
                                    />
                                    <field name="ariba_unique_name" />
                                    <label
                                        for="ariba_email"
                                        class="col-lg-4 o_light_label"
                                    />
                                    <field name="ariba_email" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label
                                        for="ariba_supplier_id"
                                        class="col-lg-4 o_light_label"
                                    />
                                    <field name="ariba_supplier_id" />
                                    <label
                                        for="ariba_password"
                                        class="col-lg-4 o_light_label"
                                    />
                                    <field name="ariba_password" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>
