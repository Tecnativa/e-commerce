<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TODO: Print totalized invoices per customer

        EXAMPLE OUTPUT:
        - Customer A:
            · INV0001: $223.33
            · INV0002: $344.54
        - CUSTOMER B:
            · INV0004: $500.00
            - INV0010: $22.77
    -->
    <data>
        <template id="report_invoice_customer_totals_document">
            <t t-call="web.external_layout">
            </t>
        </template>

        <template id="report_invoice_customer_totals">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.user_id.sudo().lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="website_access_test.report_invoice_customer_totals_document" t-lang="lang"/>
                </t>
            </t>
        </template>

        <report
            id="tecnativa_invoices_customer_totals"
            model="account.invoice"
            string="Invoices Customer Totals"
            report_type="qweb-pdf"
            name="website_access_test.report_invoice_customer_totals"
            file="website_access_test.report_invoice_customer_totals"
            attachment="(object.state in ('open','in_payment','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_report_base_filename())"
        />
    </data>
</odoo>
