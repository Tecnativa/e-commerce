<odoo>

    <template id="products_attributes"
              inherit_id="website_sale.products_attributes">

        <xpath expr="//t[@t-if=&quot;a.type == &apos;select&apos;&quot;]//t[@t-foreach='a.value_ids']" position="attributes">
            <attribute name="t-if">t-if="len(v.product_ids) &gt; 1"</attribute>
        </xpath>

        <xpath expr="//t[@t-if=&quot;a.type == &apos;radio&apos;&quot;]//t[@t-foreach='a.value_ids']/li" position="attributes">
            <attribute name="t-if">1 == 2</attribute>
        </xpath>

        <xpath expr="//t[@t-if=&quot;a.type == &apos;color&apos;&quot;]//t[@t-foreach='a.value_ids']" position="attributes">
            <attribute name="t-if">t-if="len(v.product_ids) &gt; 1"</attribute>
        </xpath>

    </template>

</odoo>
