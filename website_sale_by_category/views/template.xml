<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="nav_by_category" name="Website Category Navigation">
        <div class="row mt16 mb16">
            <div class="col-md-12">
                <h3>Categories</h3>
                <hr/>
            </div>
        </div>
        <div class="row mb16 text-center" t-if="c.child_id">
            <div class="col-md-3" t-foreach="c.child_id" t-as="cat">
                <a t-att-href="keep('/shop/category/' + slug(cat), category=0)">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div id="image_category">
                                <span t-field="cat.image"
                                      t-field-options='{"widget": "image",
                                                        "class": "",
                                                        "alt-field": "name"}'
                                />

                            </div>
                        </div>
                        <div class="panel-footer">
                            <span class="text-center" t-esc="cat.name"/>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <hr/>
</template>

<template id="nav_by_category_root" name="Website Category Navigation">
        <div class="row mt16 mb16">
            <div class="col-md-12">
                <h3>Categories</h3>
                <hr/>
            </div>
        </div>
        <t t-if="not category">
            <t t-foreach="categories" t-as="cat">
                <div class="col-md-3" t-if="not cat.parent_id">
                    <a t-att-href="keep('/shop/category/' + slug(cat), category=0)">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div id="image_category">
                                    <span t-field="cat.image"
                                          t-field-options='{"widget": "image",
                                                            "class": "",
                                                            "alt-field": "name"}'
                                    />

                                </div>
                            </div>
                            <div class="panel-footer">
                                <span class="text-center" t-esc="cat.name"/>
                            </div>
                        </div>
                    </a>
                </div>
            </t>
        </t>
        <t t-if="category">
            Category: <span t-esc="category.name"/>
            <t t-foreach="category.child_id" t-as="c">
                  <t t-call="website_sale_by_category.nav_by_category"/>
            </t>
        </t>
        <hr/>
</template>

<template id="categories_recursive" name="Category list">
  <li t-att-class="'active' if c.id == int(category or 0) else ''">
      <a t-att-href="keep('/shop/category/' + slug(c), category=0)" t-field="c.name"></a>
      <ul t-if="c.child_id" class="nav nav-pills nav-stacked nav-hierarchy">
          <t t-foreach="c.child_id" t-as="c">
              <t t-call="website_sale.categories_recursive"/>
          </t>
      </ul>
  </li>
</template>


<template id="website_sale.products_categories" inherit_id="website_sale.products" active="False"
          customize_show="True" name="Product Categories">
    <xpath expr="//div[@id='products_grid']" position="before">
            <t t-call="website_sale_by_category.nav_by_category_root"/>
    </xpath>
</template>

</data>
</openerp>
