<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="nav_by_category" name="Website Category Navigation">
    <t t-if="category and category.show_child_category">
        <div class="row mt16 mb16">
            <div class="col-md-12">
                <h3>Categories</h3>
                <hr/>
            </div>
        </div>
        <div class="row mb16 text-center" t-if="category.child_id">
            <div class="col-md-3" t-foreach="category.child_id" t-as="cat">
                <a t-att-href="keep('/shop/category/' + slug(cat), category=0)">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div id="image_category">
                                <span t-field="cat.image"
                                      t-field-options='{"widget": "image",
                                                        "class": "",
                                                        "alt-field": "name"}'
                                />

                            </div>
                        </div>
                        <div class="panel-footer">
                            <span class="text-center" t-esc="cat.name"/>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <hr/>
    </t>
</template>

<template id="products" inherit_id="website_sale.products">
    <xpath expr="//div[@id='products_grid']/table" position="before">
        <div class="row">
            <div class="col-md-12">
                <t t-call="website_sale_by_category.nav_by_category"/>
            </div>
        </div>

    </xpath>
</template>

</data>
</openerp>
